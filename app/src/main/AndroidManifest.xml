<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.uas.mobileuas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light"
        tools:targetApi="31">

        <!-- SplashScreen sebagai launcher (jika ingin SplashScreen yang pertama muncul) -->
        <activity
            android:name=".ui.theme.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Material3.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Jika kamu lebih memilih MainActivity sebagai launcher, pindahkan intent-filter ke MainActivity dan hapus dari SplashScreen -->

        <!-- Login & Register -->
        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".Register"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <!-- Main -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <!-- Recommendation Activities -->
        <activity
            android:name=".RecommendationActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light" />

        <activity
            android:name=".RecommendationDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light" />

        <!-- Ticket Purchase Activities -->
        <activity
            android:name=".BusTicketPurchaseActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".PlaneTicketPurchaseActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".TrainTicketPurchaseActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />
    </application>

</manifest>
