<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icon transaksi -->
        <ImageView
            android:id="@+id/iconTransaksi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_ticket"
            android:tint="#3F51B5"
            android:layout_marginEnd="16dp" />

        <!-- Info transaksi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembelian Tiket Pesawat"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTanggalTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Mei 2025, 14:30"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Jumlah / Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/tvJumlahTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.250.000"
                android:textColor="#388E3C"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvStatusTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berhasil"
                android:textColor="#388E3C"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
