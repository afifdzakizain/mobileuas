<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="4dp"
    android:elevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/txtNamaPO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Nama PO" />

        <TextView android:id="@+id/txtJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berangkat: ... , Tanggal: ..."
            android:textSize="14sp"/>

        <TextView android:id="@+id/txtRute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dari ... ke ..."
            android:textSize="14sp"/>

        <TextView android:id="@+id/txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga: Rp..."
            android:textSize="14sp" />

        <TextView android:id="@+id/txtKursi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Kursi: ..."
            android:textSize="14sp" />

        <TextView android:id="@+id/txtMetode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metode: ..."
            android:textSize="14sp" />

        <TextView android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: ..."
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
