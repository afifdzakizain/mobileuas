<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false"
            android:layout_gravity="center">

            <!-- Asal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asal"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtAsal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan kota keberangkatan"
                android:inputType="textCapWords"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <!-- Tujuan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tujuan"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtTujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan kota tujuan"
                android:inputType="textCapWords"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <!-- Tanggal Keberangkatan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Keberangkatan"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/edtTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih tanggal"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@android:drawable/edit_text"
                    android:padding="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawablePadding="8dp" />
            </RelativeLayout>

            <!-- Tombol Cari -->
            <Button
                android:id="@+id/btnCari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cari Perjalanan"
                android:backgroundTint="#1976D2"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
